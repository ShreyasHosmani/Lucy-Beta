<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:entries="@array/spinnerItems"
        android:spinnerMode="dialog"
        android:prompt="@string/text_input_spinner_prompt"
        android:id="@+id/textInputSpinner">

    </Spinner>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textInput"
        android:hint="@string/text_input_hint"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:id="@+id/textInputUpdateButton"
        android:visibility="gone"
        android:background="@color/colorAccent"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:text="@string/text_input_dialog_update_button_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textInputCancelButton"
            android:text="@string/text_input_dialog_cancel_button_text"
            android:background="@color/colorAccent"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textInputDoneButton"
            android:text="@string/text_input_dialog_done_button_text"
            android:background="@color/colorAccent"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

</LinearLayout>